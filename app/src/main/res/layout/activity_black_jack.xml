<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlackJack">

    <Button
        android:id="@+id/doubleId"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="536dp"
        android:text="Double"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hitId"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="536dp"
        android:text="Hit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stayId"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="632dp"
        android:text="Stay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainId"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="632dp"
        android:text="Back to Menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/house1Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player3Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player2Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toStartOf="@+id/player3Id"
        app:layout_constraintStart_toEndOf="@+id/player1Id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player1Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="224dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/house2Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/house3Id"
        app:layout_constraintStart_toEndOf="@+id/house1Id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/house3Id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/betId"
        android:hint="@string/bet_str"
        android:layout_width="262dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="256dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Points:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealId" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="24dp"
        android:text="High Score:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betId" />

    <TextView
        android:id="@+id/scoreCur"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/dealId" />

    <TextView
        android:id="@+id/scoreHig"
        android:layout_width="99dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/betId" />

    <Button
        android:id="@+id/dealId"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="412dp"
        android:text="Deal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house1Id" />

    <TextView
        android:id="@+id/plCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Id" />
</androidx.constraintlayout.widget.ConstraintLayout>